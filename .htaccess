<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /task3/
    
    # Remove .php extension
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^\.]+)$ $1.php [NC,L]
    
    # Redirect to index if file doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^.*$ index.php [L]
</IfModule>

<IfModule mod_headers.c>
    # Enable GZIP Compression
    AddEncoding gzip .gz
    AddType application/gzip .gz
    
    # Cache control headers
    Header set Cache-Control "max-age=31536000, public" .jpg
    Header set Cache-Control "max-age=31536000, public" .gif
    Header set Cache-Control "max-age=31536000, public" .png
    Header set Cache-Control "max-age=86400, public" .css
    Header set Cache-Control "max-age=604800, public" .js
    Header set Cache-Control "no-cache, must-revalidate" .php
    
    # Security headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Deny access to sensitive files
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
    Allow from env=REDIRECT_STATUS
</FilesMatch>

<FilesMatch "(config\.php|\.sql|\.env)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Allow access to uploads directory
<Directory /uploads/profiles>
    Order Allow,Deny
    Allow from all
</Directory>
